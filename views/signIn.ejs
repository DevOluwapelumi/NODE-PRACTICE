<body>


      <div class="row mt-5">
          <div class="col-sm-12 col-lg-3 mx-auto shadow-lg p-5 mt-5">
            <h1 class="text-center text-decoration-underline">Sign In</h1>
            <% if (message != "") { %>
                <div class="text-center alert alert-danger"><%= message %></div>
                <% } %>
              <form action="/signIn" method="POST">
                <label for="name">Email</label>
              <input name="email" type="text" placeholder="Email" class="form-control"> <br> <br>
              <label for="name">Password</label>
              <input name="password" type="text" placeholder="PASSWORD" class="form-control"> <br> <br>
              <button class="btn btn-dark border border-dark border-5 col-lg-12 col-sm-6 mt-5">Go_to_Dashboard</button>
            </form>
            <div class="text-center"><%= message %></div>
          </div>
      </div>

    
</body>
</html>